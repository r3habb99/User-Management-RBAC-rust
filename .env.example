# =============================================================================
# User Management API - Environment Configuration
# =============================================================================
# Copy this file to .env and modify values as needed:
#   cp .env.example .env
#
# For Docker deployment, these values are used by docker-compose.yml
# For local development, these are loaded by the application via dotenv
# =============================================================================

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
SERVER_HOST=127.0.0.1
SERVER_PORT=8080

# -----------------------------------------------------------------------------
# MongoDB Configuration
# -----------------------------------------------------------------------------
# For local development (without Docker)
MONGODB_URI=mongodb://localhost:27017
DATABASE_NAME=user_management

# For Docker deployment, these credentials are used by both MongoDB and the API
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password123

# MongoDB external port (Docker)
MONGO_PORT=27017

# -----------------------------------------------------------------------------
# JWT Configuration
# -----------------------------------------------------------------------------
# ⚠️ IMPORTANT: Change this secret in production!
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Token validity period in hours
JWT_EXPIRATION_HOURS=24

# -----------------------------------------------------------------------------
# File Upload Configuration
# -----------------------------------------------------------------------------
# Directory for storing uploaded files (avatars)
UPLOAD_DIR=./uploads

# -----------------------------------------------------------------------------
# Admin User Seeding
# -----------------------------------------------------------------------------
# Set to true to create an admin user on first startup
SEED_ADMIN=true

# Initial admin credentials
# ⚠️ IMPORTANT: Change these in production and update after first login!
ADMIN_EMAIL=admin@example.com
ADMIN_USERNAME=admin
ADMIN_PASSWORD=Admin@123456

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins
CORS_ORIGINS=http://127.0.0.1:8080,http://localhost:8080,http://localhost:3000

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
# Log levels: trace, debug, info, warn, error
RUST_LOG=info

# -----------------------------------------------------------------------------
# Docker-specific Configuration
# -----------------------------------------------------------------------------
# API external port
API_PORT=8080

# MongoDB Express external port (development UI)
MONGO_EXPRESS_PORT=8081
